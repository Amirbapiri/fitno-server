{
  "openapi": "3.0.0",
  "info": {
    "title": "Fitno API Documentation",
    "version": "1.0.0",
    "description": "Fitno is a fitness tracking application that allows users to monitor their workouts, track their progress, and analyze their fitness data. This API documentation provides detailed information about the Fitno API endpoints and how to interact with them."
  },
  "paths": {
    "/v1/coaches": {
      "get": {
        "summary": "Get all coaches",
        "tags": [
          "Coaches"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CoachesResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing authentication token"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "operationId": "getAllCoaches"
      }
    },
    "/v1/coaches/delete/{coachId}": {
      "delete": {
        "summary": "Delete a coach",
        "tags": [
          "Coaches"
        ],
        "parameters": [
          {
            "name": "coachId",
            "in": "path",
            "description": "ID of the coach to be deleted",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Coach deleted successfully"
          },
          "400": {
            "description": "Bad Request - When the coachId is missing or invalid"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "operationId": "deleteCoach"
      }
    },
    "/v1/coaches/profile": {
      "get": {
        "summary": "Get Coach Profile",
        "tags": [
          "Coaches"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "operationId": "getCoachProfile"
      }
    },
    "/v1/coaches/auth/signup": {
      "post": {
        "summary": "Coach Signup",
        "tags": [
          "Coaches"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phoneNumber": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "phoneNumber",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Coach signup successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Coach"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - When the user already exists or the request is invalid",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "operationId": "coachSignup"
      }
    },
    "/v1/coaches/auth/sign-in": {
      "post": {
        "summary": "Coach Sign-In",
        "tags": [
          "Coaches"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phoneNumber": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "phoneNumber",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Coach sign-in successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/Coach"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found - When the user does not exist or the credentials are invalid",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "operationId": "coachSignIn"
      }
    },
    "/v1/coaches/auth/verification": {
      "post": {
        "summary": "Verify Coach Token",
        "tags": [
          "Coaches"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string"
                  }
                },
                "required": [
                  "token"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token is valid",
            "content": {
              "application/json": {
                "schema": {
                  "type": "boolean"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - When the token is missing or invalid",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found - When the user associated with the token is not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "boolean"
                }
              }
            }
          }
        },
        "operationId": "verifyCoachToken"
      }
    },
    "/v1/coaches/auth/sign-out": {
      "post": {
        "summary": "Sign Out",
        "tags": [
          "Coaches"
        ],
        "responses": {
          "204": {
            "description": "Successful sign out"
          },
          "400": {
            "description": "Bad Request - Error in signing user out",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "operationId": "signOutCoach"
      }
    },
    "/v1/coaches/avatar": {
      "put": {
        "summary": "Update coach's avatar",
        "middlewares": [
          "auth",
          "multerMiddleware",
          "httpUpdateUserAvatar"
        ]
      }
    },
    "/v1/coaches/avatar/{id}/": {
      "get": {
        "summary": "Get coach's avatar",
        "middlewares": [
          "httpGetMyAvatar"
        ]
      }
    },
    "/v1/coaches/avatar/me/delete": {
      "delete": {
        "summary": "Delete coach's avatar",
        "middlewares": [
          "auth",
          "httpDeleteMyAvatar"
        ]
      }
    },
    "/v1/coaches/requests/all": {
      "get": {
        "summary": "Get all coach's requests",
        "middlewares": [
          "auth",
          "httpGetAllRequests"
        ]
      }
    },
    "/v1/coaches/requests/{id}": {
      "get": {
        "summary": "Get a single coach's request",
        "middlewares": [
          "auth",
          "httpGetSingleRequest"
        ]
      }
    },
    "/v1/clients/auth/signup": {
      "post": {
        "summary": "Sign up as a client",
        "middlewares": [
          "httpPostClientSignUp"
        ]
      },
      "/api/workouts": {
        "get": {
          "summary": "Get all workouts",
          "description": "Retrieve a list of all recorded workouts for the authenticated user.",
          "responses": {
            "200": {
              "description": "Successful response with a list of workouts.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Workout"
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized. User must be authenticated to access this endpoint."
            },
            "500": {
              "description": "Internal Server Error. An error occurred while processing the request."
            }
          }
        },
        "post": {
          "summary": "Create a new workout",
          "description": "Create a new workout record for the authenticated user.",
          "requestBody": {
            "description": "Workout object that needs to be added.",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Workout"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Workout created successfully."
            },
            "400": {
              "description": "Bad Request. The request body is invalid or missing required fields."
            },
            "401": {
              "description": "Unauthorized. User must be authenticated to access this endpoint."
            },
            "500": {
              "description": "Internal Server Error. An error occurred while processing the request."
            }
          }
        }
      }
    }
  }
}